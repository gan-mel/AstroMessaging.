<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ganm.ganmessaging.UI.MainActivity">

        <ImageView
            android:id="@+id/logo_s"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:transitionName="logo"
            android:src="@drawable/horo31" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/firstnamefield"
            android:layout_alignBottom="@+id/firstnamefield"
            android:layout_alignStart="@+id/textView5"
            android:text="First Name" />

        <EditText
            android:id="@+id/firstnamefield"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lastnamefield"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="22dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/lastnamefield"
            android:layout_alignBottom="@+id/lastnamefield"
            android:layout_marginEnd="14dp"
            android:layout_toStartOf="@+id/lastnamefield"
            android:text="Last Name" />

        <EditText
            android:id="@+id/lastnamefield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/phoneNumber"
            android:layout_alignStart="@+id/phoneNumber"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/phoneNumber"
            android:layout_alignStart="@+id/textView5"
            android:layout_marginBottom="6dp"
            android:text="Phone" />

        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/avatarURL"
            android:layout_alignStart="@+id/avatarURL"
            android:layout_marginBottom="18dp"
            android:ems="10"
            android:inputType="phone" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/nickName"
            android:layout_alignBottom="@+id/nickName"
            android:layout_alignStart="@+id/textView"
            android:text="Nickname" />

        <EditText
            android:id="@+id/nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/logoutBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView2"
            android:layout_alignEnd="@+id/textView2"
            android:layout_marginBottom="21dp"
            android:text="AvatarURL" />

        <EditText
            android:id="@+id/avatarURL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignStart="@+id/nickName"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/startchtbtn2"
            android:layout_alignBottom="@+id/startchtbtn2"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/startchtbtn2"
            android:text="Logout" />

        <Button
            android:id="@+id/startchtbtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/nickName"
            android:layout_marginBottom="109dp"
            android:layout_marginStart="8dp"
            android:text="Start" />

        <CheckBox
            android:id="@+id/saveD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/logoutBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="72dp"
            android:checked="false"
            android:text="Save details"
            />

        <Button
            android:id="@+id/loadD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/nickName"
            android:layout_alignParentEnd="true"
            android:onClick="loadCredsActivity"
            android:text="Load Data" />

        <Switch
            android:id="@+id/authSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/saveD"
            android:layout_toEndOf="@+id/textView"
            android:text="Auth" />
</RelativeLayout>

